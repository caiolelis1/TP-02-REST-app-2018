<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufmg.coltec.lolzinho.MainActivity">


    <EditText
        android:id="@+id/search"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:hint="Summoner/Champion"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/summoner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/search"
        android:layout_below="@+id/search"
        android:layout_marginStart="52dp"
        android:layout_marginTop="25dp"
        android:text="Summoner" />

    <Button
        android:id="@+id/champion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/summoner"
        android:layout_alignBottom="@+id/summoner"
        android:layout_toStartOf="@+id/spinner"
        android:text="Champion" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search"
        android:layout_alignTop="@+id/search"
        android:layout_toEndOf="@+id/search" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/champion"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/summoner"
        android:layout_marginTop="38dp"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>
