<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufmg.coltec.lolzinho.SummonerPage">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="101dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="181dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/profile"
        android:text="Invocador"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eloImage"
        android:layout_alignStart="@+id/name"
        android:text="Nivel"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="56dp" />

    <TextView
        android:id="@+id/eloRank"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/profile"
        android:layout_alignStart="@+id/level"
        android:layout_toStartOf="@+id/eloTier"
        android:text="Elo"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/eloTier"
        android:layout_width="66dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/eloImage"
        android:layout_toStartOf="@+id/eloImage"
        android:text="Elo"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="86dp" />


    <ImageView
        android:id="@+id/eloImage"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_alignBottom="@+id/eloRank"
        android:layout_alignEnd="@+id/name"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="77dp" />

    <ListView
        android:id="@+id/partidas"
        android:layout_width="368dp"
        android:layout_height="379dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="124dp" />

</RelativeLayout>
